{{template "base" .}}

{{define "content"}}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Coins</h1>
        <a href="/coins/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Add New Coin
        </a>
    </div>

    <div class="bg-white shadow-md rounded my-6">
        <table class="min-w-full">
            <thead>
                <tr class="bg-gray-100">
                    <th class="px-6 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Symbol</th>
                    <th class="px-6 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Price</th>
                    <th class="px-6 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Market Cap</th>
                    <th class="px-6 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">24h Volume</th>
                    <th class="px-6 py-3 border-b-2 border-gray-200"></th>
                </tr>
            </thead>
            <tbody>
                {{range .Coins}}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap border-b border-gray-200">{{.Symbol}}</td>
                    <td class="px-6 py-4 whitespace-nowrap border-b border-gray-200">{{.Name}}</td>
                    <td class="px-6 py-4 whitespace-nowrap border-b border-gray-200">${{printf "%.2f" .Price}}</td>
                    <td class="px-6 py-4 whitespace-nowrap border-b border-gray-200">${{printf "%.0f" .MarketCap}}</td>
                    <td class="px-6 py-4 whitespace-nowrap border-b border-gray-200">${{printf "%.0f" .Volume24h}}</td>
                    <td class="px-6 py-4 whitespace-nowrap border-b border-gray-200 text-right">
                        <a href="/coins/edit?id={{.ID}}" class="text-blue-600 hover:text-blue-900 mr-4">Edit</a>
                        <form method="POST" action="/coins/delete" class="inline">
                            <input type="hidden" name="id" value="{{.ID}}">
                            <button type="submit" class="text-red-600 hover:text-red-900" onclick="return confirm('Are you sure you want to delete this coin?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
</div>
{{end}} 